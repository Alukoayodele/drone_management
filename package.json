{
  "name": "drone_management",
  "version": "1.0.0",
  "description": "A drone Management system",
  "main": "server.ts",
  "author": "Ayodele Aluko",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "prestart": "yarn build",
    "start": "node -r module-alias/register dist/src/server.js",
    "dev": "nodemon -r tsconfig-paths/register src/server.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "migration:up": "yarn run typeorm migration:run -d libs/dal/datasource.ts",
    "migration:revert": "yarn run typeorm migration:revert -d libs/dal/datasource.ts",
    "migration:generate": "yarn run typeorm migration:generate libs/dal/migrations/${name} -d libs/dal/datasource.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.4.0",
    "typeorm-naming-strategies": "^4.1.0",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.12",
    "@types/yup": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.22",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "_moduleAliases": {
    "@dm": "dist/libs",
    "@config": "dist/config/index",
    "@middlewares": "dist/src/middlewares/index",
    "@exceptions": "dist/src/exceptions/index",
    "@resources": "dist/src/resources"
  }
}
